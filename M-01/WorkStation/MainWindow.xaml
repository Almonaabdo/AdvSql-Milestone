<Window x:Class="WorkStation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Workstation — Single Station Simulator"
        Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Inputs -->
            <RowDefinition Height="Auto"/>
            <!-- Status -->
            <RowDefinition Height="*"/>
            <!-- Event log -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- ===== Top row: Inputs (Station + Worker + Buttons) ===== -->
        <StackPanel Grid.Row="0" Grid.Column="0"
                    Orientation="Horizontal" VerticalAlignment="Center"
                    Margin="0,0,8,8">
            <TextBlock Text="Station ID:" VerticalAlignment="Center" />
            <TextBox x:Name="StationIdBox"
                     Width="60" Margin="4,0,16,0"
                     ToolTip="Numeric station identifier for this simulator." />

            <TextBlock Text="Worker:" VerticalAlignment="Center" />
            <ComboBox x:Name="WorkerBox"
                      Width="180" Margin="4,0,0,0"
                      ToolTip="Select the worker assigned to this station." />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,0,8">
            <Button x:Name="Start"
                    Content="Start"
                    Width="80" Margin="0,0,8,0"
                    Click="StartBtn_Click" />
            <Button x:Name="StopBtn"
                    Content="Stop"
                    Width="80"
                    IsEnabled="False"
                    Click="StopButton_Click" />
        </StackPanel>

        <!-- ===== Middle row: Status ===== -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    Margin="0,0,0,8">
            <TextBlock Text="Status:" VerticalAlignment="Center"/>
            <TextBlock x:Name="AssembyStateText"
                       Text="Idle"
                       FontWeight="SemiBold"
                       Margin="4,0,16,0"
                       VerticalAlignment="Center"/>

            <TextBlock Text="Time scale:" VerticalAlignment="Center"/>
            <TextBlock x:Name="TimeScaleText"
                       Text="1.0"
                       FontWeight="SemiBold"
                       Margin="4,0,0,0"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- ===== Bottom row: Event log ===== -->
        <GroupBox Grid.Row="2" Grid.ColumnSpan="2"
                  Header="Event log (latest at top)"
                  Margin="0">
            <ListBox x:Name="LogList"
                     HorizontalContentAlignment="Stretch"
                     FontFamily="Consolas"
                     FontSize="12"
                     Padding="4" />
        </GroupBox>
    </Grid>
</Window>
