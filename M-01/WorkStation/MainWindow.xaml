<Window x:Class="WorkStation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkStation"
        mc:Ignorable="d"
        Title="A-03 Programming Abstractions"
        Height="650"
        Width="1020"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2F"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Window.Resources>
        <!-- Primary button style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>


    <Grid>
        <TextBlock Text="M-2 Assembly Simulation"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"
               HorizontalAlignment="Center"
               Margin="0,20,0,0"
               Grid.Row="0"/>

        <TextBlock Text="Online 🟢"
                Name="onlineStatus"
                Visibility="Hidden"
               FontSize="12" 
               FontWeight="Bold"
               Foreground="#FF1CB133"
               HorizontalAlignment="Left"
               Margin="50,20,0,0"
               Grid.Row="0"/>

        <TextBlock Text="LENS BIN"
               FontSize="18"
               FontWeight="Bold"
               Foreground="White"
               HorizontalAlignment="Left"
               Margin="27,181,0,-161"
               Grid.Row="0"/>

        <Button Content="Connect" Name="connectionButton" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Left" Margin="885,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.789,-0.371" Height="48" Width="114" Click="ApplyButton_Click"/>
        <Button Visibility="Hidden" Content="Check" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Left" Margin="27,225,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.789,-0.371" Height="48" Width="114" Click="Button_Click"/>
        <CheckBox Name="easyConnect" Content="Easy Connect" HorizontalAlignment="Left" Margin="909,68,0,0" VerticalAlignment="Top" Foreground="#FFF7F7F7"/>
        <Button Content="Start Station" x:Name="StartStation" Style="{StaticResource PrimaryButtonStyle}"  HorizontalAlignment="Center" Margin="0,134,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.789,-0.371" Height="48" Width="114" Click="startButton_Click"/>
    </Grid>
</Window>