<Window x:Class="Andon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Andon"
        mc:Ignorable="d"
        Title="Andon Display" Height="450" Width="800" Background="#FF1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Workstation Andon Display" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <UniformGrid Grid.Row="1" Columns="2" Rows="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" >
            <!-- Harness -->
            <Border Background="#FF2E2E2E" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="Harness" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ProgressBar x:Name="pbHarness" Height="25" Minimum="0" Maximum="55" Value="55"/>
                    <Ellipse x:Name="indHarness" Width="15" Height="15" Fill="Green" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Reflector -->
            <Border Background="#FF2E2E2E" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="Reflector" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ProgressBar x:Name="pbReflector" Height="25" Minimum="0" Maximum="35" Value="20"/>
                    <Ellipse x:Name="indReflector" Width="15" Height="15" Fill="Green" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Housing -->
            <Border Background="#FF2E2E2E" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="Housing" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ProgressBar x:Name="pbHousing" Height="25" Minimum="0" Maximum="24" Value="24"/>
                    <Ellipse x:Name="indHousing" Width="15" Height="15" Fill="Green" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Lens -->
            <Border Background="#FF2E2E2E" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="Lens" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ProgressBar x:Name="pbLens" Height="25" Minimum="0" Maximum="40" Value="40"/>
                    <Ellipse x:Name="indLens" Width="15" Height="15" Fill="Green" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Bulb -->
            <Border Background="#FF2E2E2E" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="Bulb" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ProgressBar x:Name="pbBulb" Height="25" Minimum="0" Maximum="60" Value="60"/>
                    <Ellipse x:Name="indBulb" Width="15" Height="15" Fill="Green" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Bezel -->
            <Border Background="#FF2E2E2E" CornerRadius="10" Margin="10" Padding="10">
                <StackPanel>
                    <TextBlock Text="Bezel" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ProgressBar x:Name="pbBezel" Height="25" Minimum="0" Maximum="75" Value="75"/>
                    <Ellipse x:Name="indBezel" Width="15" Height="15" Fill="Green" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
        </UniformGrid>
    </Grid>
</Window>